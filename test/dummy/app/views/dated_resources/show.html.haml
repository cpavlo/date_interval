- model_class = DatedResource
.page-header
  %h1=t '.title', default: model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:date) + ':'
  %br
  = @dated_resource.date
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @dated_resource.name


= link_to t('.back', default: t('helpers.links.back')), dated_resources_path, class: 'btn btn-default'
= link_to t('.edit', default: t('helpers.links.edit')), edit_dated_resource_path(@dated_resource), class: 'btn btn-default'
= link_to t('.destroy', default: t('helpers.links.destroy')), dated_resource_path(@dated_resource), method: 'delete', data: { confirm: t('.confirm', default: t('helpers.links.confirm', default: 'Are you sure?')) }, class: 'btn btn-danger'
